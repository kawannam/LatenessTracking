<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watch_view_stub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rectLayout="@layout/rect_activity_main"
    app:roundLayout="@layout/round_activity_main"
    tools:context="com.example.kendra.tardiness.MainActivity"
    tools:deviceIds="wear">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/colorPrimary">


        <TextView
            android:text="...Tardiness   "
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/Title"
            android:layout_weight="0.58"
            android:background="@color/white"
            android:textAppearance="@style/TextAppearance.WearDiag.Title" />

        <Button
            android:text="Task Switch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/button1"
            android:onClick="switchClick"
            android:background="@color/Pink"
            android:layout_gravity="right"
            android:layout_weight="0.18" />
        <Button
            android:text="Going to be late"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:id="@+id/button2"
            android:onClick="realizeClick"
            android:background="@color/lightPurple"
            />

        <Button
            android:text="Made it"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/button3"
            android:onClick="hereClick"
            android:background="@color/purple"
            android:layout_gravity="bottom"/>

    </LinearLayout>
</android.support.wearable.view.BoxInsetLayout>